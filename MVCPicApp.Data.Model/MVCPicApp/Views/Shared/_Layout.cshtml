<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/bootstrap/css/bootstrap.min.css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="container">
	            <div class="row">
		            <div class="span2">
                        
                        <a href="@Url.Action("Index", "Home")" ><img src="~/Images/pixelyakbetalogo.png" /></a>
		            </div>
		            <div class="span7">
                        <ul class="nav nav-tabs">
                            <li>
                                <a href="@Url.Action("Submit", "Home")">Submit</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Gallery", "Submissions")">Gallery</a>
                            </li>
                            <li>
                                <a href="#">Profile</a>
                            </li>
                        </ul>
		            </div>
		            <div class="span3">
                        <section id="login">
                            @Html.Partial("_LoginPartial")
                        </section>
		            </div>
	            </div>
            </div>
            @*<div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Submit", "Submit", "Home")</li>
                            <li>@Html.ActionLink("Gallery", "Gallery", "Submissions")</li>
                            <!--<li>@Html.ActionLink("User Profile", "UserProfile", "User")</li>-->
                        </ul>
                    </nav>
                </div>
            </div>*@
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>

            <div class="row">
                <div class="span4 text-center">
                    <p>© 2013 PixelYak, LLC.</p>
                </div>
                <div class="span8 text-center">
                    <a href="#">About</a> 
                    <a href="#">Feedback</a> 
                    <a href="#">Terms</a> 
                    <a href="#">Privacy</a> 
                </div>
            </div>
            @*<div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - My ASP.NET MVC Application</p>
                </div>
            </div>*@
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
